doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title= subject
    
    style.
      /* Base styles */
      body {
        background-color: #f6f6f6;
        font-family: sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 14px;
        line-height: 1.4;
        margin: 0;
        padding: 0;
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
      }
      
      /* Layout */
      .email-wrapper {
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: #f6f6f6;
      }
      
      .email-content {
        display: block;
        margin: 0 auto;
        max-width: 580px;
        padding: 10px;
        width: 580px;
      }
      
      /* Header */
      .email-header {
        background: #4a6baf;
        padding: 20px;
        text-align: center;
      }
      
      .email-header img {
        max-width: 200px;
      }
      
      /* Body */
      .email-body {
        background: #ffffff;
        border: 1px solid #e9e9e9;
        border-radius: 3px;
        padding: 20px;
      }
      
      /* Footer */
      .email-footer {
        color: #999999;
        font-size: 12px;
        text-align: center;
        padding: 20px;
      }
      
      /* Buttons */
      .btn {
        box-sizing: border-box;
        width: 100%;
      }
      
      .btn > tbody > tr > td {
        padding-bottom: 15px;
      }
      
      .btn table {
        width: auto;
      }
      
      .btn table td {
        background-color: #ffffff;
        border-radius: 5px;
        text-align: center;
      }
      
      .btn a {
        background-color: #4a6baf;
        border: 1px solid #4a6baf;
        border-radius: 5px;
        box-sizing: border-box;
        color: #ffffff;
        cursor: pointer;
        display: inline-block;
        font-size: 14px;
        font-weight: bold;
        margin: 0;
        padding: 12px 25px;
        text-decoration: none;
        text-transform: capitalize;
      }
      
      .btn-primary table td {
        background-color: #4a6baf;
      }
      
      .btn-primary a {
        background-color: #4a6baf;
        border-color: #4a6baf;
        color: #ffffff;
      }
      
      /* Responsive */
      @media only screen and (max-width: 620px) {
        .email-content {
          width: 100% !important;
        }
      }

